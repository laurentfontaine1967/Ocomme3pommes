{% extends 'base.html.twig' %}

{% block title %}Réinitialiser ou changer son mot de passe
{% endblock %}

{% block body %}


	<div class="container p-5 mt-5" style="width:50%">
		{% for flashError in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		<h6>Réinitialiser ou changer son mot de passe</h6>
		<div>
			<small>
				Un lien vous sera envoyé par mail.
			</small>
		</div>

		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email) }}


		<button class="btn btn-primary">Recevoir le lien</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
