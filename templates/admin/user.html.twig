{% extends 'base.html.twig' %}

{% block title %}Voir utilisateurs
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="{{ asset('css/user.css') }}">
	<body style="height:95vh">
		<div id="adjust" class="container mt-5" style="height:90%">

			<div>
				{% include "public/shared/_messages_flash.html.twig" %}
			</div>
			<a href="{{ path('admin/admin_home') }}" class="btn btn-primary btn-sm mb-4">Retour au menu administrateur</a>
			<h3>Liste des Utilisateurs</h3>
			{{ knp_pagination_render(users) }}
			<div class="col">

				{% if users | length > 0 %}

					<div class="row">
						{% for user in users %}

							<div class="card-body col-md-4 mt-1">
								<h6 class="card-title">{{ user.nom }}
									{{ user.prenom }}</h6>
								<p class="card-text">{{ user.email }}</p>
								<p class="card-text">Role:{{ user.roles[0] }}</p>
								<a href="{{ path('admin_change_role',{'id': user.id}) }}" class="btn btn-warning btn-sm" style="p-1">changer Role</a>
								<a href="{{ path('admin_delete_user',{'id': user.id}) }}" class="btn btn-danger btn-sm" style="p-1">Supprimer Utilisateur</a>
							</div>

						{% endfor %}


					{% else %}
						<p>Aucun Utilisateur inscrit!</p>

					{% endif %}
				</div>
			</div>
		</div>
	</body>
{% endblock %}
