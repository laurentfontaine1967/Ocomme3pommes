{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	{# <link rel="stylesheet" href="{{ asset('css/login.css') }}"> #}
	<body style="height:90vh">
		<div class="container p-5" style="height:80%">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous etes connectés{{ app.user.prenom}},
						<a href="{{ path('app_logout') }}">Se deconnecter</a>
					</div>
				{% endif %}

				<h5>Se connecter</h5>
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				<label for="inputPassword">Mot de Passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Se souvenir de moi
					</label>


				</div>


				<button class="btn btn-outline-primary mb-20 pb-30" type="submit">
					Se connecter
				</button>
			</form>
			<div class="mt-3">
				<a href="{{ path('app_register') }}">Vous n'avez pas de compte? Créer
				</a>
			</div>
			<div class="mt-3">
				<a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?
				</a>
			</div>

		</div>
	</body>
{% endblock %}
